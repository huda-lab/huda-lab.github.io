        body {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        background: #fbfbfd;
      }

      main {
        width: 100%;
        max-width: 900px;
        padding: 2rem;
      }

      .strategic-post {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
      }

      .container {
        padding: 3rem;
      }

      .post-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #f0f0f0;
      }

      .post-title {
        font-size: 2.6rem;
        font-weight: 300; /* Lighter font for "wellness" feel */
        color: #2c3e50;
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      .post-meta {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 1rem;
        font-size: 1rem;
        color: #7f8c8d;
      }
      
      .post-tags {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .tag {
        background: #e0f2f1; /* Soft teal */
        color: #00695c;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        letter-spacing: 0.5px;
      }

      .summary-box {
        background: #e8f5e9; /* Light green gentle background */
        border: 1px solid #c8e6c9;
        border-left: 4px solid #43a047;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2.5rem;
      }

      .summary-box h2 {
        margin-bottom: 0.8rem;
        font-size: 1.3rem;
        color: #2e7d32;
        font-weight: 600;
      }

      .summary-box ul {
        margin: 0;
        padding-left: 1.2rem;
      }
      
      .summary-box li {
        margin-bottom: 0.5rem;
        color: #37474f;
      }

      .article-section {
        margin-bottom: 3rem;
      }

      .article-section h2 {
        font-size: 1.8rem;
        font-weight: 400;
        color: #00695c;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #b2dfdb;
        padding-bottom: 0.5rem;
      }

      .article-section h3 {
         font-size: 1.3rem;
         color: #004d40;
         margin-top: 1.5rem;
         margin-bottom: 0.8rem;
      }
      
      .article-section p {
        line-height: 1.9; /* More airy spacing */
        color: #455a64;
        font-size: 1.05rem;
        margin-bottom: 1.2rem;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      }

      .stat-card {
        background: #fafafa;
        border: 1px solid #eeeeee;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.3s ease;
        
        &:hover {
           transform: translateY(-5px);
           box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }
      }

      .stat-number {
        font-size: 2.5rem;
        font-weight: 300;
        color: #00897b;
        margin-bottom: 0.5rem;
      }

      .stat-label {
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #546e7a;
        margin-bottom: 0.8rem;
      }

      .stat-description {
        font-size: 0.9rem;
        color: #78909c;
        line-height: 1.4;
      }

      .expert-quote {
        background: linear-gradient(to right, #e0f2f1, #ffffff);
        border-left: none;
        border-right: 4px solid #26a69a; /* Right border for different style */
        padding: 2rem;
        border-radius: 8px;
        margin: 2.5rem 0;
        font-family: serif; /* More academic/sophisticated look */
      }

      .expert-quote p {
        font-style: italic;
        font-size: 1.3rem;
        color: #004d40;
        margin-bottom: 1rem;
      }

      .expert-quote cite {
        font-size: 1rem;
        font-weight: 600;
        color: #00796b;
        display: block;
        text-align: right;
        font-family: sans-serif;
      }

      .data-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 1.5rem;
        font-size: 0.95rem;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e0e0e0;
      }

      .data-table th,
      .data-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #f0f0f0;
      }

      .data-table th {
        background: #00695c;
        color: white;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
      }
      
      .data-table tr:last-child td {
        border-bottom: none;
      }
      
      .data-table tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      
      .sources-list {
         padding-left: 1.2rem;
         color: #607d8b;
      }

      .call-to-action {
        background: #004d40;
        color: white;
        padding: 3rem;
        border-radius: 12px;
        text-align: center;
        margin-top: 2rem;
      }
      
      .call-to-action h3 {
        color: white;
        margin-top: 0;
        margin-bottom: 1rem;
      }
      
      .call-to-action p {
        color: #b2dfdb;
        margin-bottom: 2rem;
      }

      .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
      }

      .cta-btn {
        padding: 0.8rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        
        &.primary {
          background: white;
          color: #004d40;
          
          &:hover {
             background: #b2dfdb;
             transform: translateY(-2px);
          }
        }
        
        &.secondary {
           background: transparent;
           color: white;
           border: 2px solid #b2dfdb;
           
           &:hover {
              background: #b2dfdb;
              color: #004d40;
              transform: translateY(-2px);
           }
        }
      }

      @media (max-width: 768px) {
        .container {
          padding: 1.5rem;
        }
        .post-title {
          font-size: 2rem;
        }
        .stats-grid {
           grid-template-columns: 1fr;
        }
        .expert-quote {
           padding: 1.5rem;
        }
      }
    </style>
  </body>
</html>
