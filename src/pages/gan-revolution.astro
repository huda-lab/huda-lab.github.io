        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        margin: 2rem 0;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 8px;
      }
      
      .charger-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }
      
      .charger-visual {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
      }
      
      .silicon-charger .charger-size {
        width: 100px;
        height: 140px;
        background: linear-gradient(135deg, #6c757d, #495057);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      
      .gan-charger .charger-size {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #28a745, #20c997);
        border-radius: 6px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      
      .charger-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        
        strong {
          font-size: 1rem;
          color: #333;
        }
        
        span {
          font-size: 0.85rem;
          color: #666;
        }
      }
      
      .arrow {
        font-size: 2rem;
        color: #2c5aa0;
        font-weight: 700;
      }
      
      .citation {
        font-size: 0.9rem;
        color: #666;
        font-style: italic;
        margin-top: 2rem;
      }
      
      .call-to-action {
        background: linear-gradient(135deg, #2c5aa0, #1e3f6b);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        text-align: center;
        margin-top: 3rem;
      }
      
      .call-to-action h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }
      
      .call-to-action p {
        margin-bottom: 1.5rem;
        opacity: 0.9;
      }
      
      .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
      }
      
      .cta-btn {
        padding: 0.8rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
        
        &.primary {
          background: white;
          color: #2c5aa0;
          
          &:hover {
            background: #f8f9fa;
            transform: translateY(-1px);
          }
        }
        
        &.secondary {
          background: transparent;
          color: white;
          border: 2px solid white;
          
          &:hover {
            background: white;
            color: #2c5aa0;
            transform: translateY(-1px);
          }
        }
      }
      
      @media (max-width: 768px) {
        main {
          padding: 1rem;
        }
        
