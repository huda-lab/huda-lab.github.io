        color: #333;
        margin-bottom: 1rem;
        line-height: 1.2;
      }
      
      .post-meta {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 1rem;
        font-size: 1rem;
        color: #666;
      }
      
      .post-date {
        font-weight: 600;
      }
      
      .post-author {
        font-style: italic;
      }
      
      .post-tags {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
      }
      
      .tag {
        background: #2c5aa0;
        color: white;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
      }
      
      .post-content {
        line-height: 1.8;
        font-size: 1.1rem;
        color: #444;
      }
      
      .article-section {
        margin-bottom: 3rem;
      }
      
      .article-section h2 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2c5aa0;
        margin-bottom: 1.5rem;
        border-left: 4px solid #2c5aa0;
        padding-left: 1rem;
      }
      
      .article-section p {
        margin-bottom: 1.5rem;
        text-align: justify;
      }
      
      .physics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
      }
      
      .physics-card {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 1.5rem;
        
        h3 {
          font-size: 1.1rem;
          font-weight: 600;
          color: #2c5aa0;
          margin-bottom: 1rem;
        }
        
        p {
          font-size: 0.95rem;
          color: #666;
          margin: 0;
        }
      }
      
      .comparison {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        gap: 0.5rem;
      }
      
      .material {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
      }
      
      .material-name {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
      }
      
      .material-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #555;
        
        &.highlight {
          color: #28a745;
        }
      }
      
      .vs {
        font-weight: 600;
        color: #999;
        font-size: 0.9rem;
      }
      
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
      }
      
      .stat-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        
        &:hover {
          transform: translateY(-4px);
          box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
        }
        
        &.energy {
          border-top: 4px solid #ffc107;
        }
        
        &.carbon {
          border-top: 4px solid #28a745;
        }
        
        &.market {
          border-top: 4px solid #2c5aa0;
        }
      }
      
      .stat-icon {
