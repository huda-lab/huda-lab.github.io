        vertical-align: top;
      }

      .data-table th {
        color: #202124;
        font-weight: 700;
        background: #f1f3f4;
      }
      
      .sources-list {
         padding-left: 1.2rem;
         color: #5f6368;
         font-size: 0.95rem;
      }

      .call-to-action {
        background: #f8f9fa;
        border: 1px solid #dadce0;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
      }

      .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
      }

      .cta-btn {
        padding: 0.6rem 1.2rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        font-size: 0.95rem;
        transition: background-color 0.2s;
        border: none;
        cursor: pointer;
        
        &.primary {
          background: #1a73e8;
          color: white;
          
          &:hover {
             background: #1967d2;
          }
        }
        
        &.secondary {
           background: white;
           color: #1a73e8;
           border: 1px solid #dadce0;
           
           &:hover {
              background: #f1f3f4;
           }
