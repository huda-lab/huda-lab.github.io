      }

      .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .tag {
        background: #f1f3f4;
        color: #3c4043;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
      }

      .summary-box {
        background: #e6f4ea;
        border: 1px solid #ceead6;
        border-left: 4px solid #34a853;
        border-radius: 8px;
        padding: 1.5rem;
